[flake8]
# Flake8 configuration for code linting

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    dist,
    build,
    *.egg-info,
    alembic/versions,
    migrations,

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with Black)
    E203,
    # E501: line too long (handled by Black)
    E501,
    # W503: line break before binary operator (conflicts with Black)
    W503,
    # W504: line break after binary operator
    W504,
    # E402: module level import not at top of file
    E402,

# Select specific error codes to check
select =
    # Errors
    E,
    # Warnings
    W,
    # pyflakes errors
    F,
    # Naming conventions
    N,
    # Complexity
    C,

# Per-file ignores
per-file-ignores =
    # Ignore unused imports in __init__.py
    __init__.py:F401,
    # Ignore import order in conftest.py
    tests/conftest.py:E402,

# Show source code for each error
show-source = True

# Show statistics
count = True
statistics = True
